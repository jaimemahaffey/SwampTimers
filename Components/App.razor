@code {
	private string GetBaseHref()
	{
		// Try to get the path base from the current HTTP request
		var httpContext = HttpContextAccessor?.HttpContext;
		if (httpContext != null)
		{
			var pathBase = httpContext.Request.PathBase.Value;
			if (!string.IsNullOrEmpty(pathBase))
			{
				return pathBase.EndsWith("/") ? pathBase : $"{pathBase}/";
			}
			
			// Try to detect from X-Ingress-Path header
			var ingressHeader = httpContext.Request.Headers["X-Ingress-Path"].FirstOrDefault();
			if (!string.IsNullOrEmpty(ingressHeader))
			{
				return ingressHeader.EndsWith("/") ? ingressHeader : $"{ingressHeader}/";
			}
			
			// Try to detect from the request URL path for HA Ingress pattern
			var requestPath = httpContext.Request.Path.Value ?? "";
			var fullUrl = $"{httpContext.Request.Scheme}://{httpContext.Request.Host}{httpContext.Request.PathBase}{requestPath}";
			
			// Check Referer header for ingress path
			var referer = httpContext.Request.Headers["Referer"].FirstOrDefault();
			if (!string.IsNullOrEmpty(referer) && referer.Contains("/api/hassio_ingress/"))
			{
				try
				{
					var uri = new Uri(referer);
					var match = System.Text.RegularExpressions.Regex.Match(uri.AbsolutePath, @"(/api/hassio_ingress/[^/]+)");
					if (match.Success)
					{
						return $"{match.Groups[1].Value}/";
					}
				}
				catch { }
			}
		}
		
		// Fallback to environment variable
		var ingressPath = Environment.GetEnvironmentVariable("INGRESS_PATH");
		if (!string.IsNullOrEmpty(ingressPath))
		{
			return ingressPath.EndsWith("/") ? ingressPath : $"{ingressPath}/";
		}
		
		return "/";
	}
}
