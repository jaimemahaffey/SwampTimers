@inherits LayoutComponentBase

<MudThemeProvider @rendermode="InteractiveServer" Theme="_theme" />
<MudLayout>
	<TopNavBar />
	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>

@code {
	private MudTheme _theme = new MudTheme()
	{
		PaletteLight = new PaletteLight()
		{
			Primary = "#594ae2",
			AppbarBackground = "#27272f",
			AppbarText = "#ffffff",
			DrawerBackground = "#27272f",
			DrawerText = "#ffffff"
		},
		PaletteDark = new PaletteDark()
		{
			Primary = "#7e6fff",
			AppbarBackground = "#27272f",
			AppbarText = "#ffffff",
			DrawerBackground = "#27272f",
			DrawerText = "#ffffff"
		}
	};
}
